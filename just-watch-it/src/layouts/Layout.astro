---
import { ViewTransitions } from "astro:transitions";
import NavBar from "../components/NavBar.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
	
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <ViewTransitions />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-stone-100" >

    <NavBar />
	<video
	src="watch-video.mp4"
	width="100%"
	height="100%"
	muted
	autoplay
	loop
	transition:persist
	class="absolute"></video>
    <main class="backdrop-blur-sm bg-gradient-to-br from-transparent to-stone-950 h-full md:w-screen sm:w-full lg:w-screen">

      <slot />
    </main>
  </body>
</html>

<style>
	  video {
    width: 100%;
    height: 100% !important;
    object-fit: cover;
  }
</style>