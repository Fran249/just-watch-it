---
interface Props {
  title: string;
  paragraph:any;
  id: string;
}
const { title, paragraph, id } = Astro.props;
---

<section class="h-screen w-full z-20" id={id}>
  <slot name="nav"></slot>
  <div
    class="h-screen w-full flex flex-col justify-center items-center gap-36 absolute bg-gradient-to-b from-transparent to-neutral-950  z-20"
  >
    <h1
      style="text-wrap: balance; font-style: italic;"
      class="font-bold text-7xl text-center text-stone-100 mb-5"
    >
      {title}
    </h1>

    <div class="flex flex-row justify-center items-center flex-wrap">
      {
        paragraph.map((item) => {
          return (
            <p class="text-center px-11 text-neutral-100 lg:h-20 lg:w-1/3 md:w-1/2 sm:w-max z-20">
              {item.text}
            </p>
          );
        })
      }
    </div>
  </div>

  <div class="w-full h-screen absolute z-10">
    <slot name="background-slot" />
  </div>
  <div class="z-20 fixed bottom-0 left-0">
    <slot name="footer"/>
  </div>
</section>

