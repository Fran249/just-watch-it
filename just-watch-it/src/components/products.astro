---
interface Props {
  data: any;
}
const { data } = Astro.props;
---

<section
  class="w-full min-h-screen flex justify-center items-center flex-wrap py-20 gap-16 p-5"
>
  {
    data.map((watch) => {
      return (
        <div class="w-full max-w-sm bg-white border border-gray-200 shadow ">

            <img
              class=" rounded-t-lg"
              src={watch.image}
              alt="product image"
              transition:name={watch.name}
            />

          <div class="px-5 pb-5">
            <h5 transition:name={watch.brand} class="text-xl font-semibold tracking-tight text-gray-900 ">
              {watch.name}
            </h5>
            <p class="py-5">
              {watch.description}
              </p>
            <div class="flex items-center mt-2.5 mb-5">
              <button>
                <slot slot="icon" />
              </button>
              <span class="bg-neutral-300 text-black-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded   ml-3">
                {watch.likes}
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-3xl font-bold text-gray-900 ">
                ${watch.price}
              </span>
              <a
                href={`/${watch.id}`}
                class="text-neutral-950 w-20 h-15 bg-neutral-100 text-center p-1 border-neutral-950 border-[1px]"
                style="font-style: italic;"
              >
                <h3>See More</h3>
              </a>
            </div>
          </div>
        </div>
      );
    })
  }
</section>

<style>
  @font-face {
    font-family: "just-do-it";
    src: url(just-do-it-font.otf);
  }

  h1 {
    font-family: "just-do-it";
  }
</style>
